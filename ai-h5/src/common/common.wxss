* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}
.px1-bottom-ffe6e6 {
  position: relative;
  border: none;
}
.px1-bottom-ffe6e6:after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  background: #FFE6E6;
  width: 100%;
  height: 2px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
.px1-around {
  border: none;
}
.px1-around:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  border: 1px #FED083 solid;
  border-radius: 50px;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: left top;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 2000;
  background-color: rgba(0, 0, 0, 0.7);
}
button {
  border: none;
  outline: none;
  background-color: transparent;
}
