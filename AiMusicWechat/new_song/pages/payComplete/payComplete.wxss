/* pages/payComplete/payComplete.wxss */

.payComplete {
  padding-top: 130rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f5fa;
}

.contain {
  background-color: white;
  box-sizing: border-box;
  height: 100%;
}

.payStateContain {
  padding: 10rpx 0 15rpx 0;
  background-color: #f5f5fa;
}

.payState {
  height: 285rpx;
  background-color: white;
  text-align: center;
  font-size: 34rpx;
}

.successIcon,.failIcon {
  vertical-align: bottom;
  margin-top: 41rpx;
  margin-bottom: 25rpx;
}

.teacherInfo {
  width: 100%;
  background-color: white;
  padding-top: 50rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.notice {
  height: 46rpx;
  margin-bottom: 60rpx;
}

.noticeImg {
  width: 42rpx;
  vertical-align: middle;
  margin-right: 22rpx;
}

.noticeText {
  font-size: 26rpx;
  color: #7048d1;
  vertical-align: middle;
}

.teacherImg {
  width: 320rpx;
  height: 320rpx;
  vertical-align: bottom;
  margin-top: 20rpx;
  border: 1rpx solid black;
  box-sizing: border-box;
  padding: 10rpx;
  margin-bottom: 15rpx;
}

.copy {
  width: 335rpx;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  margin-top: 12.5rpx;
  border: 1rpx solid #979797;
  background-color: white;
  color: #666;
}

.containTwo{
  background-color: #f5f5fa;
  box-sizing: border-box;
  height: 100%;
}

.orderInfo{
  padding: 30rpx 25rpx;
  background-color: white;
  font-size: 28rpx;
  color: #333;
}

.orderPrice{
  font-size: 28rpx;
  margin: 30rpx 0;
}

.bottomBuy {
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #d9d9d9;
  position: fixed;
  bottom: 0;
  background-color: white;
}

.bottomBuy::after {
  content: "";
  display: block;
  clear: both;
}

.bottomPrice {
  float: left;
  font-size: 42rpx;
  line-height: 100rpx;
}

.bottomNewPrice {
  color: #999;
  font-size: 30rpx;
  vertical-align: middle;
  margin-left: 30rpx;
}

.bottomOldPrice {
  color: #7048d1;
  vertical-align: middle;
  margin-left: 5rpx;
}

.bottomBtn {
  float: right;
  width: 260rpx;
  font-size: 20rpx;
}

.buy {
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  background-color: #7048d1;
  display: inline-block;
  vertical-align: middle;
  font-size: 34rpx;
  color: #fff;
}
