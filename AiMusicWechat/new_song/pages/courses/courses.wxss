/* pages/courses/courses.wxss */

.courses {
  padding-top: 130rpx;
  background-color: #f5f5fa;
}

.contain {
  padding: 10rpx 0;
  background-color: #f5f5fa;
}

.course {
  padding: 30rpx;
  border-bottom: 1px solid #f5f5fa;
  background-color: white;
}

.course::after {
  content: "";
  display: block;
  clear: both;
}

.courseImg {
  width: 180rpx;
  height: 180rpx;
  float: left;
}

.courseInfo {
  float: right;
  width: calc(100% - 180rpx);
  height: 180rpx;
  box-sizing: border-box;
  position: relative;
}

.courseTitleLevel {
  padding-left: 30rpx;
}

.courseTitleLevel::after {
  content: "";
  display: block;
  clear: both;
}

.courseTitle {
  font-size: 32rpx;
  color: #333;
  float: left;
  max-width: 380rpx;
}

.courseLevel {
  border: 1rpx solid #7048d1;
  border-radius: 5rpx;
  color: #7048d1;
  font-size: 24rpx;
  padding: 0 5rpx;
  margin-top: 4rpx;
  float: right;
}

.courseDes {
  color: #666;
  font-size: 26rpx;
}

.courseAttribute {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.courseAttribute::after {
  content: "";
  display: block;
  clear: both;
}

.coursePrice {
  color: #7048d1;
  font-size: 34rpx;
  float: left;
}

.courseStudentsCount {
  font-size: 22rpx;
  color: #999;
  float: right;
  margin-top: 16rpx;
}
