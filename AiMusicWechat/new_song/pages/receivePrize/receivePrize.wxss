/* pages/receivePrize/receivePrize.wxss */

.receivePrize {
  padding-top: 130rpx;
  position: relative;
  background-color: #f5f5fa;
  height: 100vh;
  box-sizing: border-box;
}

.modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.7);
  /* padding: 190rpx 40rpx 0 40rpx; */
  padding: 190rpx 0rpx 0 0rpx;
  box-sizing: border-box;
}

.close {
  width: 100%;
  height: 54rpx;
  margin-bottom: 20rpx;
}

.closeBtn {
  float: right;
  margin-right: 40rpx;
}

.saveImg {
  width: 670rpx;
  margin: 0 40rpx;
}

.saveBtn {
  height: 120rpx;
  width: 100%;
  background-color: #7048d1;
  color: white;
  text-align: center;
  line-height: 120rpx;
}

.contain {
  padding: 10rpx 0;
  background-color: #f5f5fa;
}

.backgroundImg {
  width: 100%;
  height: 580rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

.success {
  padding: 30rpx 110rpx;
  height: 100%;
  box-sizing: border-box;
}

.fail {
  padding: 120rpx 110rpx;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  font-size: 52rpx;
  color: white;
}

.title {
  font-size: 52rpx;
  text-align: center;
}

.titleText {
  color: white;
}

.coupon {
  width: 100%;
  height: 143rpx;
  background-image: url('https://s.immusician.com/static/wechat/images/%E4%BC%98%E6%83%A0%E5%88%B8%E8%83%8C%E6%99%AF@3x.png');
  background-size: 100% 100%;
  margin-top: 40rpx;
}

.coupon::after {
  content: "";
  display: block;
  clear: both;
}

.price {
  width: 155rpx;
  height: 100%;
  display: inline-block;
  text-align: center;
  line-height: 143rpx;
  color: #4ac1bf;
  font-size: 42rpx;
  vertical-align: bottom;
}

.couponAttribute {
  width: 375rpx;
  height: 100%;
  display: inline-block;
  vertical-align: bottom;
  color: #666;
  font-size: 20rpx;
  padding: 20rpx 20rpx 20rpx 41rpx;
  box-sizing: border-box;
}

.couponReminder {
  font-size: 30rpx;
  color: #333;
}

.instructions {
  margin-top: 50rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #666;
}

.btn {
  margin: 80rpx 0;
  padding: 0 90rpx;
  box-sizing: border-box;
}

.use, .invite {
  color: white;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #7048d1;
  border-radius: 40rpx;
}

.invite {
  margin-top: 56rpx;
}
.modal_bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  padding: 37rpx 0;
  justify-content: space-around;
  background-color:#fff;
}
.modal_bottom .left,.modal_bottom .right{
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #333333;
  letter-spacing: 1.44rpx;
  line-height: 26rpx;
}
.modal_bottom .left image,.modal_bottom .right image{
  margin-bottom: 20rpx;
  width: 80rpx;
  height: 80rpx
}