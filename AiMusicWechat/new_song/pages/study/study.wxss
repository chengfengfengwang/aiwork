/* pages/study/study.wxss */

.studyPage {
  padding-top: 130rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f5fa;
}

.contain {
  background-color: #f5f5fa;
  box-sizing: border-box;
  height: 100%;
}

.studyContain {
  padding: 10rpx 0;
  background-color: #f5f5fa;
}

.studyProgress {
  height: 148rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  background-color: white;
  border-bottom: 1rpx solid #f5f5fa;
  /* margin-bottom: 1rpx; */
}

.studyCover {
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  /* vertical-align: middle; */
}

.studyProgressVisual {
  width: 550rpx;
  display: inline-block;
  margin-left: 40rpx;
  vertical-align: top;
}

.studyCourse {
  font-size: 22rpx;
  margin-bottom: 30rpx;
}

.courseName {
  font-size: 28rpx;
  color: #333;
}

.courseProgress {
  color: #666;
  float: right;
}
