/* pages/activity/activity.wxss */

.activityContainer {
  padding-top: 130rpx;
  background-color: #f5f5fa;
}

.contain {
  padding: 0rpx 0 0 0;
  background-color: #f8f8ff;
  position: relative;
}

.banner {
  width: 100%;
  vertical-align: bottom;
}

.formContainer {
  width: 690rpx;
  height: 462rpx;
  background-color: white;
  border-radius: 10rpx;
  position: absolute;
  top: 645rpx;
  margin-left: 30rpx;
  box-shadow: 0 0rpx 5rpx #cfc2c7;
  padding: 25rpx 60rpx;
  box-sizing: border-box;
}

.labelStyle {
  border-bottom: 1px solid #999;
  padding: 15rpx 0;
  /* background-color: red; */
}

.formImg {
  width: 30rpx;
  vertical-align: middle;
  padding: 0 3rpx;
  box-sizing: border-box;
}

.inputStyle {
  display: inline-block;
  width: 340rpx;
  color: #333;
  font-size: 28rpx;
  vertical-align: middle;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.labelTwo {
  margin-top: 35rpx;
}

.sendAuthCode {
  width: 200rpx;
  height: 60rpx;
  background-color: #7048d1;
  border-radius: 30rpx;
  display: inline-block;
  line-height: 60rpx;
  color: white;
  font-size: 30rpx;
  vertical-align: middle;
  padding: 0;
}

.submit {
  margin-top: 76rpx;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #999;
}

.submit::after {
  border: none;
}

.modal {
  width: 100%;
  height: 100vh;
  background-color: rgba(51, 51, 51, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  padding: 300rpx 30rpx;
  box-sizing: border-box;
}
.modal .modal_header{
  text-align: center;
  font-size: 32rpx;
  padding: 20rpx 0;
}
.modal .content{
  position: relative;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  /* height: 500rpx;
  overflow: auto */
}
.modal .item{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #333;
  padding: 10rpx;
}
.modal .item:last-child{
  border:none
}
.modal .item .label{
  font-size: 28rpx;
  color: #333
}
.modal .item .value{
  font-size: 28rpx;
  color: #333
}
.modal .close_img{
  position: absolute;
  right: 6rpx;
  top:6rpx;
  width: 40rpx;
  padding: 10rpx
}
.pre_zone{
  display: inline-block;
  margin-left: 10rpx;
  font-size: 28rpx
}
.login_label{
  display: flex;
  align-items: center;
}
.closeBtn{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%)
}