/* pages/classOperate/add/add.wxss */
.page {
  background-color: #f8f8f8;
}
.guide {
  display: flex;
  background-color: #fff;
  padding: 20rpx 112rpx;
  margin-bottom: 20rpx;
}
.guide .item {
  position: relative;
  text-align: center;
  flex-grow: 1;
  width: 33.33%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.guide .item image {
  margin-bottom: 10rpx;
  width: 64rpx;
  height: 64rpx;
  position: relative;
  z-index: 3;
}
.guide .item .step_line {
  position: absolute;
  left: 90rpx;
  top: 25%;
  width: 100%;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.05);
  z-index: 2;
}
.guide .item .step_line.active {
  background: #ff6f31;
}
.guide .item.active {
  color: #ff6f31;
}
.page {
  background-color: #fff;
  padding-bottom: 120rpx;
}
.course_type {
  padding: 32rpx;
  background-color: #fff;
}
.course_type .type_title {
  margin-bottom: 48rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.course_type .radio {
  display: block;
  margin-bottom: 48rpx;
}
.course_type .radio .radio_text {
  margin-left: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
