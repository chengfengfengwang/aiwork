.page {
  padding: 20rpx 32rpx 120rpx 32rpx;
  background-color: #fff;
}
.search {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 40rpx;
}
.search image {
  margin: 0 24rpx;
  width: 48rpx;
  height: 48rpx;
}
.user_wrapper .user {
  margin: 30rpx;
  display: flex;
  align-items: center;
}
.user_wrapper .user .select_i {
  margin-right: 32rpx;
  width: 48rpx;
  height: 48rpx;
}
.user_wrapper .user .select_i image {
  width: 100%;
  height: 100%;
}
.user_wrapper .user .avatar {
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
}
.user_wrapper .user .avatar image {
  width: 100%;
  height: 100%;
}
.user_wrapper .user .user_info {
  flex-grow: 1;
  position: relative;
}
.user_wrapper .user .user_info .name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #353535;
}
.user_wrapper .user .user_info .phone {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.user_wrapper .user .user_info:after {
  content: "";
  position: absolute;
  bottom: -16rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
}
