.page {
  background-color: #f8f8f8;
}
.guide {
  display: flex;
  background-color: #fff;
  padding: 20rpx 112rpx;
  margin-bottom: 20rpx;
}
.guide .item {
  position: relative;
  text-align: center;
  flex-grow: 1;
  width: 33.33%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.guide .item image {
  margin-bottom: 10rpx;
  width: 64rpx;
  height: 64rpx;
  position: relative;
  z-index: 3;
}
.guide .item .step_line {
  position: absolute;
  left: 90rpx;
  top: 25%;
  width: 100%;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.05);
  z-index: 2;
}
.guide .item .step_line.active {
  background: #ff6f31;
}
.guide .item.active {
  color: #ff6f31;
}
.page {
  background-color: #fff;
}
.search {
  display: flex;
  align-items: center;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 40rpx;
  margin: 0 32rpx;
}
.search image {
  margin: 0 24rpx;
  width: 48rpx;
  height: 48rpx;
}
.checked_user {
  padding: 32rpx;
}
.checked_user .title {
  margin-bottom: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(53, 53, 53, 0.4);
}
.checked_user .checked_user_wrapper {
  display: flex;
  flex-wrap: wrap;
}
.checked_user .checked_user_wrapper .user {
  position: relative;
  width: 312rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
}
.checked_user .checked_user_wrapper .user:nth-child(2n+1) {
  margin-right: 32rpx;
}
.checked_user .checked_user_wrapper .user .remove {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9;
  width: 32rpx;
  height: 32rpx;
}
.checked_user .checked_user_wrapper .user .remove image {
  width: 100%;
  height: 100%;
}
.checked_user .checked_user_wrapper .user .avatar {
  margin-right: 20rpx;
  width: 64rpx;
  height: 64rpx;
}
.checked_user .checked_user_wrapper .user .avatar image {
  width: 100%;
  height: 100%;
}
.checked_user .checked_user_wrapper .user .user_info {
  flex-grow: 1;
  position: relative;
  z-index: 2;
}
.checked_user .checked_user_wrapper .user .user_info .name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.checked_user .checked_user_wrapper .user .user_info .phone {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 0.4);
}
.user_wrapper {
  height: 642rpx;
  padding-bottom: 120rpx;
}
.user_wrapper .user {
  margin: 30rpx;
  display: flex;
  align-items: center;
}
.user_wrapper .user .select_i {
  margin-right: 32rpx;
  width: 48rpx;
  height: 48rpx;
}
.user_wrapper .user .select_i image {
  width: 100%;
  height: 100%;
}
.user_wrapper .user .avatar {
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
}
.user_wrapper .user .avatar image {
  width: 100%;
  height: 100%;
}
.user_wrapper .user .user_info {
  flex-grow: 1;
  position: relative;
}
.user_wrapper .user .user_info .name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #353535;
}
.user_wrapper .user .user_info .phone {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.user_wrapper .user .user_info:after {
  content: "";
  position: absolute;
  bottom: -16rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
}
