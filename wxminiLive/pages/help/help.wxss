.page {
  padding-bottom: 80rpx;
}
.account_section {
  height: 240rpx;
  position: relative;
  display: flex;
  padding: 0 32rpx;
  align-items: center;
}
.account_section .acount_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.account_section .acount_main {
  z-index: 9;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
}
.account_section .acount_main .left .line1 {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
}
.account_section .acount_main .left .phone {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold, PingFangSC;
  font-weight: 600;
  color: #ffffff;
}
.account_section .acount_main .right {
  width: 200rpx;
  height: 64rpx;
}
.account_section .acount_main .right image {
  width: 200rpx;
  height: 64rpx;
}
.ope_section {
  padding: 52rpx 0 30rpx 32rpx;
}
.ope_section .title {
  margin-bottom: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.ope_section .step_section .step_title {
  margin-bottom: 32rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 0.4);
}
.ope_section .step_section .step_item_wrapper {
  margin-bottom: 48rpx;
}
.ope_section .step_section .step_item_wrapper .step_item {
  position: relative;
  margin-left: 60rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}
.ope_section .step_section .step_item_wrapper .step_item .index_count {
  position: absolute;
  left: -60rpx;
  top: 4%;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  background-color: #F4F1F4;
  border-radius: 50%;
}
