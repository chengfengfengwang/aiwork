/* pages/login/login.wxss */
.top {
  position: absolute;
  top: 0%;
  left: 0%;
  width: 750rpx;
  height: 220rpx;
}
.logo {
  position: absolute;
  top: 110rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 200rpx;
}
.title {
  position: absolute;
  top: 28%;
  left: 0%;
  width: 100%;
  text-align: center;
}
.title1 {
  font-size: 48rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.title2 {
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.form {
  position: absolute;
  top: 46.76%;
  left: 50%;
  transform: translateX(-50%);
}
.form .section {
  margin-bottom: 32rpx;
  position: relative;
  display: flex;
  align-items: center;
  width: 630rpx;
  height: 88rpx;
  border-radius: 44rpx;
  border: 2rpx solid rgba(51, 51, 51, 0.1);
  padding: 20rpx 40rpx;
}
.form .section image.phone {
  width: 36rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.form .section image.phone_code {
  width: 40rpx;
  height: 48rpx;
  margin-right: 30rpx;
}
.form .section .get_code {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 48rpx;
  line-height: 88rpx;
  border-left: 2rpx solid rgba(51, 51, 51, 0.1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ff5726;
  text-align: center;
}
.form .btn-area {
  margin-top: 80rpx;
}
.form .btn-area button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 630rpx;
  height: 88rpx;
  background: #ff6f31;
  border-radius: 44rpx;
  opacity: 0.5;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
}
.form .btn-area button.active {
  opacity: 1;
}
