<!-- pages/classDetail/classDetail.wxml -->
<wxs module="filter" src="../../utils/filter.wxs"></wxs>
<view class="page">
    <view class="class_info">
        <view class="class_name">{{className}}</view>
        <view class="group">
            <view class="group_title">小组成员</view>
            <view class="edit_btn" bindtap="editClass">修改信息</view>
            <view class="user_wrapper">
                <view wx:for="{{userList}}" wx:key="index" class="user">
                    <view class="avatar">
                        <image src="{{item.avatar}}" />
                    </view>
                    <view class="user_info">
                        <view class="name">{{item.nickname}}</view>
                        <view class="phone">{{item.phone}}</view>
                    </view>
                </view>
               
            </view>
        </view>
    </view>
    <view class="gap"></view>
    <view class="live_info">
        <view class="live_title">小班直播计划表</view>
        <view class="live_item" wx:for="{{liveList}}">
            <view class="time">{{filter.formatTime(item.start_time)}}</view>
            <view class="line1">
                <text>直播倒计时</text>
                <text class="count_down">{{filter.getCountDown(item.start_time)}}</text>
            </view>
            <view class="line2">第二课：什么是二分音符</view>
        </view>
    </view>
     <view bindtap="createLive" class="next_btn">
        <button class="btn" type="default">新建直播计划</button>
    </view>
</view>