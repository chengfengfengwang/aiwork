.tabs {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #f9f9f9;
}
.tabs .tab {
  height: 100%;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #959595;
  border-bottom: 4rpx solid transparent;
}
.tabs .tab.active {
  color: #ff6f31;
  border-bottom: 4rpx solid #ff6f31;
}
.live_class {
  margin-top: 60rpx;
  margin-bottom: 96rpx;
}
.live_class .havedata {
  display: flex;
  align-items: center;
}
.live_class .havedata .avatar_box {
  width: 136rpx;
  height: 136rpx;
  margin-left: 32rpx;
  margin-right: 24rpx;
}
.live_class .havedata .avatar_box image {
  width: 136rpx;
  height: 136rpx;
}
.live_class .havedata .info {
  flex-grow: 1;
  position: relative;
}
.live_class .havedata .info .class_name {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.live_class .havedata .info .course_name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.live_class .havedata .info .live_time {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.live_class .havedata .info .live_time .recent {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-right: 40rpx;
}
.live_class .havedata .info .live_time .count_down {
  padding: 0 15rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
  background: #ff6f31;
  border-radius: 23rpx;
}
.live_class .havedata .info:after {
  content: "";
  position: absolute;
  bottom: -45rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
}
.live_class .empty {
  width: 100%;
  height: 600rpx;
  position: relative;
}
.live_class .empty .empty_main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.live_class .empty .empty_main image {
  width: 120rpx;
  height: 114rpx;
}
.live_class .empty .empty_main .empty_text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #353535;
}
