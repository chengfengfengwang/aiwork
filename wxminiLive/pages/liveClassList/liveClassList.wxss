.page {
  background-color: #fff;
  padding-bottom: 120rpx;
}
.tabs {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #f9f9f9;
}
.tabs .tab {
  height: 100%;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #959595;
  border-bottom: 4rpx solid transparent;
}
.tabs .tab.active {
  color: #ff6f31;
  border-bottom: 4rpx solid #ff6f31;
}
.live_class {
  margin-top: 60rpx;
  margin-bottom: 96rpx;
}
.live_class .havedata .class_item {
  margin-bottom: 84rpx;
  display: flex;
  align-items: center;
}
.live_class .havedata .class_item .avatar_box {
  width: 136rpx;
  height: 136rpx;
  margin-left: 32rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.live_class .havedata .class_item .avatar_box image {
  width: 50%;
  height: 50%;
}
.live_class .havedata .class_item .avatar_box.l1 image {
  width: 100%;
  height: 100%;
}
.live_class .havedata .class_item .avatar_box.l2 {
  display: flex;
  align-items: center;
}
.live_class .havedata .class_item .avatar_box.l2 image {
  width: 50%;
  height: 50%;
}
.live_class .havedata .class_item .avatar_box.l3 {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.live_class .havedata .class_item .avatar_box.l3 image:first-child {
  width: 51%;
}
.live_class .havedata .class_item .avatar_box.l3 image {
  width: 50%;
  height: 50%;
}
.live_class .havedata .class_item .avatar_box.l4 {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.live_class .havedata .class_item .avatar_box.l4 image {
  width: 50%;
  height: 50%;
}
.live_class .havedata .class_item .info {
  flex-grow: 1;
  position: relative;
}
.live_class .havedata .class_item .info .class_name {
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #333333;
}
.live_class .havedata .class_item .info .course_name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}
.live_class .havedata .class_item .info .live_time {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.live_class .havedata .class_item .info .live_time .recent {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  margin-right: 20rpx;
}
.live_class .havedata .class_item .info .live_time .count_down {
  padding: 0 15rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
  background: #ff6f31;
  border-radius: 23rpx;
}
.live_class .havedata .class_item .info .live_time .count_down.done {
  background: rgba(0, 0, 0, 0.04);
  color: rgba(51, 51, 51, 0.48);
}
.live_class .havedata .class_item .info:after {
  content: "";
  position: absolute;
  bottom: -45rpx;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: rgba(0, 0, 0, 0.1);
}
.live_class .empty {
  width: 100%;
  height: 600rpx;
  position: relative;
}
.live_class .empty .empty_main {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.live_class .empty .empty_main image {
  width: 120rpx;
  height: 114rpx;
}
.live_class .empty .empty_main .empty_text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #353535;
}
